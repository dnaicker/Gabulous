#twitter_button {
  display:block;
  height:70px;
  width:450px;
  background: url('../images/sign-in-with-twitter.png') no-repeat 0 0;
  margin:0 auto;
}

#splash {
  width:100%;
  height:670px;
  background: url('../images/splash.png') no-repeat top center;
}

#container {
  overflow:hidden;
  background-image:url('../images/skybox01.jpg');
  width:98%;
  height:80%; 
  position:absolute;
}

.annotation {
  color:black;
}

#twitter_input {
  position:absolute;
  background: #99ccff;
  top:20px;
  right:40px;
  z-index:1;
  width:400px;
  height:200px;
  border:5px solid gray;
  border-radius:5px; 
  padding:20px;
  #twitter_profile_pic {
    height:48px;
    width:48px;
    border-radius:5px;
    border:4px solid white;
  }
}

#index-container {
  width:100%;
}

footer {
  margin:0 auto;
  margin-top:50px;
  height:50px;
  width:98%;
  li {
    list-style-type:none
    padding:0 10px;
    float:left;
    a{ 
      color:inherit
    }
  }
